<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BriefingMoments.MainPage">

    <ScrollView>
        <VerticalStackLayout>

            <Frame BackgroundColor="Red" HeightRequest="80" CornerRadius="0">
                <StackLayout>
                    
                <Label Text="Briefing para Orçamento" TextColor="White"
                       HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
                       FontSize="20" FontAttributes="Bold"/>

                </StackLayout>
            </Frame>
            <!--<Image Source="logo_branco.png" Margin="0,15,0,0" HeightRequest="60" WidthRequest="150"
       HorizontalOptions="End"/>-->

            <!--<Label
                Text="Moments Eventos"
                FontSize="25" HorizontalTextAlignment="Center" />-->
            
            <Button x:Name="Insert_brf"
                    Text="Realizar Briefing"
                    Margin="10"
                    FontSize="20"
                    HeightRequest="55"
                    FontAttributes="Bold"
                    Clicked="Insert_brf_Clicked"
                    TextColor="White"
                    BackgroundColor="Red"
                    />

            <Button x:Name="Select_brf"
                    Text="Histórico de Briefings"
                    Margin="10,0,10,10"
                    FontSize="20"
                    FontAttributes="Bold"
                    Clicked="Select_brf_Clicked"
                    />


        </VerticalStackLayout>
        
    </ScrollView>

</ContentPage>
